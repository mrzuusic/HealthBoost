datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Food {
  calories      Int?
  carbohydrates Int?
  createdAt     DateTime    @default(now())
  description   String?
  diaryEntry    DiaryEntry? @relation(fields: [diaryEntryId], references: [id])
  diaryEntryId  String?
  fat           Int?
  id            String      @id @default(cuid())
  name          String?
  protein       Int?
  updatedAt     DateTime    @updatedAt
}

model Workout {
  caloriesBurned Int?
  createdAt      DateTime    @default(now())
  description    String?
  diaryEntry     DiaryEntry? @relation(fields: [diaryEntryId], references: [id])
  diaryEntryId   String?
  id             String      @id @default(cuid())
  name           String?
  updatedAt      DateTime    @updatedAt
}

model DiaryEntry {
  createdAt   DateTime  @default(now())
  date        DateTime?
  description String?
  foods       Food[]
  id          String    @id @default(cuid())
  updatedAt   DateTime  @updatedAt
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?
  workouts    Workout[]
}

model User {
  createdAt    DateTime     @default(now())
  diaryEntries DiaryEntry[]
  email        String?      @unique
  firstName    String?
  goal         String?
  height       Int?
  id           String       @id @default(cuid())
  lastName     String?
  password     String
  roles        Json
  updatedAt    DateTime     @updatedAt
  username     String       @unique
  weight       Int?
}
